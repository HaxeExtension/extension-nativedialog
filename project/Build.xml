<xml>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	<include name="${HXCPP}/toolchain/blackberry-toolchain.xml"/>	
	
	<files id="common">		
		<compilerflag value="-Iinclude" />
		<file name="common/ExternalInterface.cpp" />
	</files>

	<files id="iphone">
		<compilerflag value="-Iinclude" />
		<compilerflag value="-Iios/include" />
		<file name="ios/NativeDialog.mm" />
	</files>

	<files id="blackberry">
		<compilerflag value="-Iinclude"/>
		<file name="blackberry/NativeDialog.cpp" />
	</files>
	
	<target id="NDLL" output="${LIBPREFIX}openflNativeDialogExtension${debug_extra}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">

		<outdir name="../ndll/${BINDIR}" />
		<ext value=".ndll" if="windows || mac || linux" />
		
		<files id="common"/>
		<files id="iphone" if="iphone"/>
		<files id="blackberry" if="blackberry"/>

		<section if="blackberry">
			<lib name="-lc" />
			<lib name="-lbps" />
		</section>

	</target>
	
	<target id="default">
		
		<target id="NDLL"/>
		
	</target>
	
</xml>
